<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:id="@+id/card_song"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/card_song_margin"
    card_view:cardBackgroundColor="@color/white"
    card_view:cardCornerRadius="@dimen/card_corner_radius"
    card_view:cardElevation="@dimen/card_elevation">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/image_wrapper_album"
            android:layout_width="@dimen/image_wrapper_album_songs_width_grid_view"
            android:layout_height="@dimen/image_wrapper_album_songs_height_grid_view"
            android:contentDescription="@string/wrapper_album_songs"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/wrapper_name_artist_song_margin_left"
            android:layout_marginStart="@dimen/wrapper_name_artist_song_margin_left"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text_name_artist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Little"/>

            <TextView
                android:id="@+id/text_name_song"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="big Planet"/>
        </LinearLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>
